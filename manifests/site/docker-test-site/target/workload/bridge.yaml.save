apiVersion: "k8s.cni.cncf.io/v1"
kind: NetworkAttachmentDefinition
metadata:
  name: ipfwd-bridge
spec:
  config: 
    cniVersion": "0.3.1"
    type": "bridge"
    bridge": "ipfwdbr"
    ipam: 
      #type: "dhcp"
      prefixpool: "10.60.3.0/24" 
      routes: ["10.60.1.0/24", "10.60.2.0/24"] 
      ifname: "endpoint0"
 

initactions:
- command:
name: "vppctl"
args: ["show", "version"]
endpoints:
- name: "vpp"
labels:
app: "vpp"
ipam:
prefixpool: "10.0.0.1/24"
#routes: ["10.60.1.0/24", "10.60.2.0/24"]
